<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.View.QuizPageDemo"
             Title="{Binding Title}"
             BackgroundColor="#9ab7b6">


    <ContentPage.Content>
        <StackLayout>
            <Grid>
               <Grid.ColumnDefinitions>
                   <ColumnDefinition />
                   <ColumnDefinition />
               </Grid.ColumnDefinitions>
               <Grid.RowDefinitions>
                   <RowDefinition />
                   <RowDefinition />
                   <RowDefinition />
                   <RowDefinition />
                </Grid.RowDefinitions>
               
                <Label Grid.Row="0" Grid.ColumnSpan="2"
                       HorizontalTextAlignment="Center"
                       Margin="3,3,3,3" 
                       Text="{Binding TheQuiz.Question}"
                       FontSize="32" FontAttributes="Bold"
                       TextColor="White"/>
               <Button Grid.Row="2" Grid.Column="0"
                       TextColor="White" 
                       Text="{Binding TheQuiz.Question}" 
                       BackgroundColor="#9ab7b6"
                       Margin="3,3,3,3"
                       Command="{Binding RefreshCommand}"
                       BorderWidth="1" BorderRadius="1" BorderColor="White"/>
               <Button Grid.Row="2" Grid.Column="1"
                       TextColor="White" 
                       Text="{Binding TheQuiz.Question.Option}" 
                       BackgroundColor="#9ab7b6"
                       Margin="3,3,3,3"
                       Command="{Binding RefreshCommand}"
                       BorderWidth="1" BorderRadius="1" BorderColor="White"/>
               <Button Grid.Row="3" Grid.Column="0"
                       TextColor="White" 
                       Text="{Binding TheQuiz.QuizName}" 
                       BackgroundColor="#9ab7b6"
                       Margin="3,3,3,3"
                       Command="{Binding RefreshCommand}"
                       BorderWidth="1" BorderRadius="1" BorderColor="White"/>
               <Button Grid.Row="3" Grid.Column="1"
                       TextColor="White" 
                       Text="{Binding TheQuiz.Category}" 
                       BackgroundColor="#9ab7b6"
                       Margin="3,3,3,3"
                       BorderWidth="1" BorderRadius="1" BorderColor="White"
                       />
               
            </Grid>
            <ListView ItemsSource="{Binding MyQuizzes}" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text ="{Binding Question }"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        </ContentPage.Content>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Refresh" Command="{Binding RefreshCommand}" />
    </ContentPage.ToolbarItems>
</ContentPage>

