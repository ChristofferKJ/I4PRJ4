<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.View.SearchQuizPageSelectQuiz"
             BackgroundColor="#9ab7b6">
    <ContentPage.Content>
        <StackLayout>
            <ActivityIndicator IsRunning="{Binding IsBusy}" />
            <Label VerticalTextAlignment="Center">Vælg en Quiz</Label>
            <ListView ItemsSource="{Binding Quizzes}" x:Name="LViewQuizzes">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding QuizName}" Detail="{Binding Category}">
                        </TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>